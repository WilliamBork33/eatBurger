<div class="row text-center">
    <h2>Add Burger</h2>

    <form method="POST" action="/" class="form">
        <div class="form-group">
            <input type="text" name="burger" class="form-control"><strong>Burger Name</strong></input>
        </div>
        <button type="submit" class="btn btn-success btn-block">Save</button>
    </form>
</div>

<div class="row">
    <div class="col-xs-6">
        <ul class="list-group">
            {{#each uneatenBurgers}}
                <li class="list-group-item">
                    <img src="{{image}}" alt="devour" height="150"><br>
                    {{ id }}. {{ burger_name }}
                    <button type="submit" form="hidden-form{{id}}" class="btn btn-primary btn-sm pull-right devour">Devour</button>
                </li>
                <form action="/{{id}}?_method=PUT" method="POST" id="hidden-form{{id}}" class="hidden-xs-up"></form>
            {{/each}}
        </ul>
    </div>

    <div class="col-xs-6">
        <ul class="list-group">
            {{#each eatenBurgers}}
                <li class="list-group-item">
                    <img src="http://images.freeimages.com/images/premium/previews/2713/27132722-empty-plate-left-after-dinner.jpg" alt="Eaten Burger" height="150"><br>
                    {{ id }}. {{ burger_name }}
                    <button type="submit" form="hidden-form{{id}}" class="btn btn-primary btn-sm pull-right devour">Re-Order</button>
                </li>
                <form action="/order/{{id}}?_method=PUT" method="POST" id="hidden-form{{id}}" class="hidden-xs-up"></form>
            {{/each}}
        </ul>
    </div>
</div>
